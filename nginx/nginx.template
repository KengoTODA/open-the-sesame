events {

}
http {
  server {
    listen 80;
    server_name $APP_DOMAIN;

    location / {
      proxy_pass http://app:5000/;
      proxy_set_header Host $host;
      proxy_set_header X-Real-IP $remote_addr;
    }
  }
  server {
    listen 80 default_server;
    server_name _;

    return 404;
  }
}
